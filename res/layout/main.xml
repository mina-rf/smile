<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="0.4">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView" android:layout_gravity="center_horizontal" android:layout_weight="0.2"/>
    </RelativeLayout>
    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:columnCount="3"
            android:rowCount="3" android:layout_weight="0.8">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton_up" android:layout_row="0" android:layout_column="1"
                android:src="@drawable/up" android:adjustViewBounds="true"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton_left" android:layout_row="1" android:layout_column="0"
                android:src="@drawable/left" android:adjustViewBounds="true"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton_right" android:layout_row="1" android:layout_column="2"
                android:src="@drawable/right"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton_down" android:layout_row="2" android:layout_column="1"
                android:src="@drawable/down" android:adjustViewBounds="true"/>
    </GridLayout>
    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="center_horizontal" android:layout_weight="0.8"
            android:columnCount="1" android:rowCount="1">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button2" android:layout_column="0" android:layout_row="0"/>
    </GridLayout>
</LinearLayout>

